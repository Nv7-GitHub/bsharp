{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.bsharp",
  "patterns": [{ "include": "#node" }, { "include": "#comment" }],
  "repository": {
    "value": {
      "patterns": [{ "include": "#node" }, { "include": "#comment" }, { "include": "#string" }, { "include": "#number" }, { "include": "#keyword" }, { "include": "#ident" }]
    },
    "ident": {
      "match": "(?:\\p{L}|\\{|\\}|\\+|-|\\*|\\/|%|==|!=|<=|>=|<|>|\\^)+",
      "name": "token.ident.bsharp",
      "patterns": [{ "include": "#keyword"}]
    },
    "keyword": {
      "match": "ELSE",
      "name": "keyword.function.bsharp"
    },
    "number": {
      "match": "(?:-)?(?:[0-9]|\\.)+",
      "name": "constant.numeric.bsharp"
    },
    "string": {
			"begin": "\"",
			"end": "\"",
			"name": "string.bsharp",
			"patterns": [
				{
					"include": "#string_escaped_char"
				}
			]
    },
    "string_escaped_char": {
			"match": "\\\\[n\"\\\\]",
			"name": "constant.character.escape"
    },
    "comment": {
      "begin": "#",
      "end": "#|\\n",
      "name": "comment.bsharp"
    },
    "node": {
      "begin": "\\[([A-Z]+)",
      "end": "\\]",
      "captures": {
        "1": {
          "name": "keyword.function.bsharp"
        }
      },
      "name": "expression.tag.bsharp",
      "patterns": [{ "include": "#value" }]
    }
  }
}
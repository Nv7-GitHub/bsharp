{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.bsharp",
  "patterns": [
    {
      "include": "#node"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "value": {
      "patterns": [
        {
          "include": "#node"
        },
        {
          "include": "#comment"
        },
        {
          "include": "#string"
        },
        {
          "include": "#byte"
        },
        {
          "include": "#number"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#ident"
        }
      ]
    },
    "ident": {
      "match": "(?:\\p{L}|\\{|\\}|\\+|-|\\*|\\/|%|==|!=|<=|>=|<|>|\\^|,|:)+",
      "name": "token.ident.bsharp",
      "patterns": [
        {
          "include": "#keyword"
        }
      ]
    },
    "number": {
      "match": "(?:-)?(?:[0-9]|\\.)+",
      "name": "constant.numeric.bsharp"
    },
    "type": {
      "match": "\\$[^ \\t\\n\\]]+",
      "name": "entity.name.type.bsharp"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.bsharp",
      "patterns": [
        {
          "include": "#string_escaped_char"
        }
      ]
    },
    "byte": {
      "begin": "'",
      "end": "'",
      "name": "string.quoted.single.bsharp",
      "patterns": [
        {
          "include": "#string_escaped_char"
        }
      ]
    },
    "string_escaped_char": {
      "match": "\\\\[nt\"\\\\']",
      "name": "constant.character.escape"
    },
    "comment": {
      "begin": "#",
      "end": "#|\\n",
      "name": "comment.bsharp"
    },
    "node": {
      "begin": "\\[([^ \\t\\n\\]]+)",
      "end": "\\]",
      "captures": {
        "1": {
          "name": "keyword.function.bsharp"
        }
      },
      "name": "expression.tag.bsharp",
      "patterns": [
        {
          "include": "#value"
        }
      ]
    }
  }
}
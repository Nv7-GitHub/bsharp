{
	"name": "bsharp",
	"description": "The B# programming language!",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/b-Development-Team/bsharp"
	},
	"publisher": "Nv7",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:bsharp"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "bsharp",
				"aliases": [
					"B#",
					"bsharp"
				],
				"extensions": [
					"bsp",
					"bsharp"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "bsharp",
				"scopeName": "source.bsharp",
				"path": "./language-highlight.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "B#",
			"properties": {
				"discordSupport": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "Whether to include the discord extension."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"eslint": "^8.10.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.2"
	}
}